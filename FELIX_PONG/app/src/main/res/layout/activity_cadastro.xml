<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#04747c"
    tools:context=".cadastro">

    <ImageView
        app:srcCompat="@drawable/logo_felix_pong"
        android:layout_marginRight="95px"
        android:layout_width="wrap_content"
        android:layout_marginTop="80px"
        android:layout_height="480px"/>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30px"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_height="wrap_content"
        android:hint="Email"/>

    <EditText
        android:textStyle="bold"
        android:textSize="30px"
        android:fontFamily="@font/alfa_slab_one"
        android:textAlignment="center"
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"/>

    <EditText
        android:textStyle="bold"
        android:textSize="30px"
        android:fontFamily="@font/alfa_slab_one"
        android:textAlignment="center"
        android:id="@+id/register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar Senha"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:backgroundTint="#FE2A14"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginLeft="230px"
        android:text="CADASTRAR"
        android:textColor="@color/white"
        android:textSize="20px"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JÃ¡ possui conta? Acesse a sua conta agora."
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginLeft="20px"
        android:textColor="@color/white"
        android:textSize="29px"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="510px"
        android:layout_marginRight="60px"
        app:srcCompat="@drawable/felix_pong" />

</LinearLayout>