<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DIFICULDADES"
    android:background="#04747c">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIFICULDADES"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_marginTop="100px"
        android:fontFamily="@font/alfa_slab_one"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttondifiFacil"
        android:fontFamily="@font/alfa_slab_one"
        android:text="EASY"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="300px"
        android:backgroundTint="#FE2A14"/>

    <Button
        android:layout_width="match_parent"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_height="wrap_content"
        android:id="@+id/buttondifiMedio"
        android:text="NORMAL"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="75px"
        android:backgroundTint="#FE2A14"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HARDCORE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:id="@+id/buttondifiGema"
        android:layout_marginTop="75px"
        android:backgroundTint="#FE2A14"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60px"
        app:srcCompat="@drawable/felix_pong" />

</LinearLayout>