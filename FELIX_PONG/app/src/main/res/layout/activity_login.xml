<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#04747c"
    tools:context=".Login">

    <ImageView
        app:srcCompat="@drawable/logo_felix_pong"
        android:layout_marginRight="95px"
        android:layout_width="wrap_content"
        android:layout_marginTop="80px"
        android:layout_height="480px"/>

    <EditText
        android:textAlignment="center"
        android:fontFamily="@font/alfa_slab_one"
        android:id="@+id/login_email"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"/>

    <EditText
        android:id="@+id/login_password"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_height="wrap_content"
        android:hint="Senha" />

    <Button
        android:id="@+id/login_button"
        android:textStyle="bold"
        android:layout_marginLeft="280px"
        android:layout_width="wrap_content"
        android:backgroundTint="#FE2A14"
        android:textSize="28px"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_height="wrap_content"
        android:text="Login"
        />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:fontFamily="@font/alfa_slab_one"
        android:textAlignment="center"
        android:layout_marginLeft="33px"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="NÃ£o tem cadastro? Clique para cadastrar!"
        android:textSize="45px"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:layout_marginRight="60px"
        app:srcCompat="@drawable/felix_pong"/>

</LinearLayout>
