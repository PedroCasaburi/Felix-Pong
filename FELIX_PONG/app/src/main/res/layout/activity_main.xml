        android:fontFamily="@font/alfa_slab_one"
        android:text="INICIAR JOGO"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttontutorial"
        android:layout_width="match_parent"
