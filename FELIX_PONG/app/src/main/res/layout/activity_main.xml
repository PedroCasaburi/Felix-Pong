        android:layout_marginTop="70px"
        android:backgroundTint="#FE2A14"
        android:fontFamily="@font/alfa_slab_one"
        android:text="TUTORIAL"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <Button
        android:id="@+id/buttoncreditos"
